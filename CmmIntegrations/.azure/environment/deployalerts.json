{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName":
        {
            "type": "string",
            "metadata": {
                "description": "The resource id of the application insights instance that will have this alert."
            }
        },
        "alertScope":
        {
            "type": "array",
            "metadata": {
                "description": "The resource id of the application insights instance that will have this alert."
            }
        },
        "actionGroups":
        {
            "type": "array",
            "metadata": {
                "description": "The resource ids of all the action groups that will be used by this alert."
            }
        }     
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('alertName')]",
            "location": "global",
            "properties": {
                "description": "At least one exception has occurred in the Cmm Astute Proxy. Investigate via Application Insights",
                "severity": 1,
                "enabled": true,
                "scopes": "[parameters('alertScope')]",
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 1,
                            "name": "Metric1",
                            "metricNamespace": "microsoft.insights/components",
                            "metricName": "exceptions/count",
                            "operator": "GreaterThanOrEqual",
                            "timeAggregation": "Count",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "microsoft.insights/components",
                "actions": "[parameters('actionGroups')]"
            },
            "tags": {
                "wfm-application": "Specialty"
            }
        }
    ]
}