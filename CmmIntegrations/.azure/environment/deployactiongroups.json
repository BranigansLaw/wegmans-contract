{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ITSM_SubscriptionKey": {
            "type": "string",
            "minLength": 1
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "AllSevsEmail",
            "location": "Global",
            "tags": {
              "wfm-application": "Specialty"
            },
            "properties": {
                "groupShortName": "AllSevsEmail",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "Dev Pharm Group_-EmailAction-",
                        "emailAddress": "PharmacyIT@wegmans.com",
                        "useCommonAlertSchema": false
                    }
                ]
            }
        },
        {
            "apiVersion": "2019-03-01",
            "type": "microsoft.insights/actionGroups",
            "name": "SEV1Alert",
            "location": "Global",
            "tags": {
              "wfm-application": "Specialty"
            },
            "properties": {
                "groupShortName": "sev1-alert",
                "enabled": true,
                "webhookReceivers": [
                    {
                        "name": "Incident",
                        "serviceUri": "[concat('https://itsm-api.wegmans.io/incidents/webhook?group=DEV%20PHARM&service=CoverMyMeds&urgency=Low&impact=Minor&api-version=2018-12-01&subscription-key=', parameters('ITSM_SubscriptionKey'))]"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "actionGroupAllSevsEmail": {
            "type": "string",
            "value": "[resourceId('microsoft.insights/actionGroups', 'AllSevsEmail')]"
        },
        "actionGroupSEV1Alert": {        
            "type": "string",
            "value": "[resourceId('microsoft.insights/actionGroups', 'SEV1Alert')]"
        }
    }
}