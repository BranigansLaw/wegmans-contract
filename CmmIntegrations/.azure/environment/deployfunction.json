{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppName": {
      "type": "string"
    },
    "functionHostingEnvironment": {
      "type": "string",
      "defaultValue": "Development",
      "allowedValues": [ "Production", "Staging", "Development" ]
    },
    "cmmStorageAccountConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Specifies the connection string of the Azure Storage account."
      }
    },
    "cmmBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Specifies the base url of the CMM API."
      }
    },
    "cmmUsername": {
      "type": "string",
      "metadata": {
        "description": "Specifies the username for the CMM API."
      }
    },
    "cmmPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies the password for the CMM API."
      }
    },
    "astuteAddressUrl": {
      "type": "string",
      "metadata": {
        "description": "Specifies the url for the Astute SOAP Address Service."
      }
    },
    "astuteCaseStreamUrl": {
      "type": "string",
      "metadata": {
        "description": "Specifies the url for the Astute SOAP Case Service."
      }
    },
    "astuteCaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Specifies the url for the Astute SOAP Case Service."
      }
    },
    "astuteUsername": {
      "type": "string",
      "metadata": {
        "description": "Specifies the username for the Astute SOAP Services."
      }
    },
    "astutePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies the password for the Astute SOAP Services."
      }
    },
    "disableSpecialtyDrugsPatientStatusUpdate": {
      "type": "bool",
      "metadata": {
        "description": "Determines whether SpecialtyDrugsPatientStatusUpdate should be disabled (timer trigger)"
      }
    },
    "frontDoorIdentifierUri": {
      "type": "string",
      "metadata": {
        "description": "Azure Front Door identifier Uri"
      }
    },
    "specialtyDrugsPatientStatusUpdateTimerTrigger": {
      "type": "string",
      "metadata": {
        "description": "NCRONTAB expression that sets up the timer trigger for SpecialtyDrugsPatientStatusUpdate function"
      }
    },
    "resourceTags": {
      "type": "object",
      "defaultValue": {
        "wfm-application": "Specialty",
        "rx-provider": "CoverMyMeds"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2019-08-01",
      "name": "linkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://wazure.blob.core.windows.net/templates/Wegmans.Web/consumptionFunction/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('functionAppName')]"
          },
          "applicationInsightsName": {
            "value": "[parameters('functionAppName')]"
          },
          "serverFarmName": {
            "value": "[parameters('functionAppName')]"
          },
          "version": {
            "value": "~3"
          },
          "tags": {
            "value": "[parameters('resourceTags')]"
          },
          "appsettings": {
            "value": {
              "WEBSITE_RUN_FROM_PACKAGE": "1",
              "AZURE_FUNCTIONS_ENVIRONMENT": "[parameters('functionHostingEnvironment')]",
              "CmmStorageAccount": "[parameters('cmmStorageAccountConnectionString')]",
              "AppCmmClient__BaseUrl": "[parameters('cmmBaseUrl')]",
              "AppCmmClient__Username": "[parameters('cmmUsername')]",
              "AppCmmClient__Password": "[parameters('cmmPassword')]",
              "AppAstuteClient__AddressUrl": "[parameters('astuteAddressUrl')]",
              "AppAstuteClient__CaseStreamUrl": "[parameters('astuteCaseStreamUrl')]",
              "AppAstuteClient__CaseUrl": "[parameters('astuteCaseUrl')]",
              "AppAstuteClientSecurity__Username": "[parameters('astuteUsername')]",
              "AppAstuteClientSecurity__Password": "[parameters('astutePassword')]",
              "AzureWebJobs.SpecialtyDrugsPatientStatusUpdate.Disabled": "[parameters('disableSpecialtyDrugsPatientStatusUpdate')]",
              "AuthorizationOptions__Audience__0": "[parameters('frontDoorIdentifierUri')]",
              "SpecialtyDrugsPatientStatusUpdateTimerTrigger": "[parameters('specialtyDrugsPatientStatusUpdateTimerTrigger')]"
            }
          },
          "identity": {
            "value": { "type": "SystemAssigned" }
          }
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[reference('linkedTemplate').outputs.functionApp.value.name]"
    },
    "functionAppDefaultHostName": {
      "type": "string",
      "value": "[reference('linkedTemplate').outputs.functionApp.value.defaultHostName]"
    },
    "appInsightsKey": {
      "type": "string",
      "value": "[reference('linkedTemplate').outputs.applicationInsights.value.instrumentationKey]"
    },
    "appInsightsId": {
      "type": "string",
      "value": "[reference('linkedTemplate').outputs.applicationInsights.value.id]"
    },
    "appInsightsName": {
      "type": "string",
      "value": "[reference('linkedTemplate').outputs.applicationInsights.value.name]"
    }
  }
}
