{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "frontDoorName": {
      "type": "string",
      "metadata": {
        "description": "The name of the frontdoor resource."
      }
    },
    "frontDoorFriendlyUrl": {
      "type": "string",
      "metadata": {
        "description": "The name of the friendly frontdoor url (wegmans.cloud url)."
      }
    },
    "backend1PrimaryName": {
      "type": "string",
      "metadata": {
        "description": "Name"
      }
    },
    "backend1SecondaryName": {
      "type": "string",
      "metadata": {
        "description": "Name"
      }
    }
  },
  "variables": {
    "frontdoorLocation": "global"
  },
  "resources": [
    {
      "apiVersion": "2019-05-01",
      "type": "Microsoft.Network/frontDoors",
      "name": "[parameters('frontDoorName')]",
      "location": "[variables('frontdoorLocation')]",
      "tags": {
        "wfm-application": "Specialty"
      },
      "properties": {
        "routingRules": [
          {
            "name": "cmmRoutingRule",
            "properties": {
              "frontendEndpoints": [
                {
                  "id": "[resourceId('Microsoft.Network/frontDoors/frontendEndpoints', parameters('frontDoorName'), 'pharmacySpecialtyEndpoint1')]"
                },
                {
                  "id": "[resourceId('Microsoft.Network/frontDoors/frontendEndpoints', parameters('frontDoorName'), 'pharmacySpecialtyEndpoint2')]"
                }
              ],
              "acceptedProtocols": [
                "Https"
              ],
              "patternsToMatch": [
                "/cmm/api/*"
              ],
              "routeConfiguration": {
                "@odata.type": "#Microsoft.Azure.FrontDoor.Models.FrontdoorForwardingConfiguration",
                "forwardingProtocol": "HttpsOnly",
                "backendPool": {
                  "id": "[resourceId('Microsoft.Network/frontDoors/backendPools', parameters('frontDoorName'), 'cmmBackendPools1')]"
                }
              },
              "enabledState": "Enabled"
            }
          }
        ],
        "healthProbeSettings": [
          {
            "name": "cmmHealthProbeSettings1",
            "properties": {
              "path": "/cmm/api/healthprobe",
              "protocol": "Https",
              "intervalInSeconds": 60,
              "healthProbeMethod": "HEAD"
            }
          }
        ],
        "loadBalancingSettings": [
          {
            "name": "loadBalancingSettings1",
            "properties": {
              "sampleSize": 4,
              "successfulSamplesRequired": 2
            }
          }
        ],
        "backendPools": [
          {
            "name": "cmmBackendPools1",
            "properties": {
              "backends": [
                {
                  "address": "[parameters('backend1PrimaryName')]",
                  "httpPort": 80,
                  "httpsPort": 443,
                  "weight": 50,
                  "priority": 1,
                  "enabledState": "Enabled",
                  "backendHostHeader": "[parameters('backend1PrimaryName')]"
                },
                {
                  "address": "[parameters('backend1SecondaryName')]",
                  "httpPort": 80,
                  "httpsPort": 443,
                  "weight": 50,
                  "priority": 2,
                  "enabledState": "Enabled",
                  "backendHostHeader": "[parameters('backend1SecondaryName')]"
                }
              ],
              "loadBalancingSettings": {
                "id": "[resourceId('Microsoft.Network/frontDoors/loadBalancingSettings', parameters('frontDoorName'), 'loadBalancingSettings1')]"
              },
              "healthProbeSettings": {
                "id": "[resourceId('Microsoft.Network/frontDoors/healthProbeSettings', parameters('frontDoorName'), 'cmmHealthProbeSettings1')]"
              }
            }
          }
        ],
        "frontendEndpoints": [
          {
            "name": "pharmacySpecialtyEndpoint1",
            "properties": {
              "hostName": "[concat(parameters('frontDoorName'), '.azurefd.net')]"
            }
          },
          {
            "name": "pharmacySpecialtyEndpoint2",
            "properties": {
              "hostName": "[parameters('frontDoorFriendlyUrl')]",
              "sessionAffinityEnabledState": "Disabled",
              "sessionAffinityTtlSeconds": 0,
              "customHttpsConfiguration": {
                "certificateSource": "FrontDoor",
                "minimumTlsVersion": "1.2",
                "protocolType": "ServerNameIndication",
                "frontDoorCertificateSourceParameters": {
                  "certificateType": "Dedicated"
                }
              }

            }
          }
        ],
        "enabledState": "Enabled"
      }
    }
  ],
  "outputs": {
    "frontDoorFrontend": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/frontDoors', parameters('frontDoorName'))).frontendEndpoints[1].properties.hostName]"
    }
  }
}